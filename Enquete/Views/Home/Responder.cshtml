@model Enquete.Models.Resposta
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enquete :: Resposta</title>
</head>
<body>

    <h1>Enquete</h1>
    
    <h2>Você é a favor, ou contra?</h2>

    <form method="Post">

        <div>
            <label for="txtNome">Seu Nome: </label><br>
            <input type="text" name="Nome" id="txtNome">
        </div>

        <div>
            <label for="txtEmail">Seu E-mail: </label><br>
            <input type="email" name="Email" id="txtEmail">
        </div>

        <div>
            Resposta:
            <div>
                <input type="radio" name="Sim" id="rdSim" value="true">
                <label for="rdSim">Sim</label>
            </div>
            <div>
                <input type="radio" name="Sim" id="rdNao" value="false">
                <label for="rdNao">Não</label>
            </div>
        </div>

        <input type="submit" value="Enviar Resposta">
    </form>

</body>
</html>